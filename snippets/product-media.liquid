{% case media.media_type %}
    {% when 'image' %}
        <img src="{{media | image_url: width: 350 }}" alt="{{media.preview_image.alt}}" width="auto" height="auto" class="w-full h-full object-cover">
     {% when 'external_video' %}
            {{media |  external_video_tag: class: 'w-full h-80 object-cover'}}
    {% when 'video' %}
        {{media |  video_tag: controls: true, class: 'w-full h-full object-cover'}}
    {% when 'model' %}
        <product-model>
            <div>
                <button class="w-full h-full bg-gray-100 border relative">
                    <img src="{{media |  image_url: width:200 }}" width="auto" height="auto" alt="{{media.preview_image.alt}}">
                </button>
            </div>
        </product-model>
    {% else %}
        {{ media |  media_tag }}
{% endcase %}